{
  "version": 2,

  "installCommand": "npm ci",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/public",

  "functions": {
    "api/**": {
      "runtime": "nodejs20.x"
    }
  },

  "env": {
    "NODE_ENV": "production"
  },

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ]
}
